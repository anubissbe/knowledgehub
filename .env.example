# Database Configuration  
DATABASE_URL=postgresql://khuser:YOUR_POSTGRES_PASSWORD@localhost:5432/knowledgehub
REDIS_URL=redis://localhost:6379/0

# Vector Database
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key

# Object Storage
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=YOUR_MINIO_PASSWORD
S3_BUCKET_NAME=knowledgehub

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Frontend Configuration
VITE_API_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ML Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cuda  # or cpu

# Crawling Configuration
CRAWL_DELAY=1.0
CRAWL_RATE_LIMIT=500
CRAWL_TIMEOUT=30

# Job Processing
JOB_QUEUE_SIZE=100
JOB_RETRY_COUNT=3
JOB_TIMEOUT=3600

# Scheduler Configuration
SCHEDULER_ENABLED=true
REFRESH_SCHEDULE="0 2 * * 0"  # Weekly at 2 AM on Sunday
REFRESH_BATCH_SIZE=2
REFRESH_DELAY_SECONDS=300

# Security
SECRET_KEY=YOUR_SECRET_KEY_HERE
API_KEY=YOUR_API_KEY_HERE

# Docker Environment Variables (REQUIRED)
POSTGRES_PASSWORD=generate_secure_password_here
MINIO_ROOT_PASSWORD=generate_secure_password_here

# Vault Configuration (Optional - for enterprise setups)
VAULT_ADDR=http://your-vault-server:8200
VAULT_TOKEN=your_vault_token_here
API_KEY_HEADER=X-API-Key
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
