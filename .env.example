# KnowledgeHub Environment Configuration
# Copy to .env and fill in your actual values

# Database Passwords
DATABASE_PASSWORD=knowledgehub123
NEO4J_PASSWORD=knowledgehub123
TIMESCALE_PASSWORD=knowledgehub123
ZEP_DB_PASSWORD=zep123

# MinIO Configuration
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Monitoring
GRAFANA_PASSWORD=admin

# External API Keys (Optional)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
FIRECRAWL_API_KEY=your-firecrawl-api-key-here

# AI Service Configuration
AI_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
ENABLE_GPU=false

# Security Configuration
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Development/Production Mode
ENVIRONMENT=development
DEBUG=true

# Phoenix Observability
PHOENIX_COLLECTOR_ENDPOINT=http://phoenix:4317

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Session Configuration
SESSION_TIMEOUT=3600
MEMORY_RETENTION_DAYS=30