# AI Knowledge Hub Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME="AI Knowledge Hub"
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=3000
API_WORKERS=4
API_RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://khuser:khpassword@localhost:5432/knowledgehub
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Weaviate Vector Database
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_COLLECTION_NAME=knowledge_chunks

# S3/MinIO Configuration
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=knowledge-hub
S3_REGION_NAME=us-east-1

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cpu  # Change to 'cuda' for GPU support
# GPU_DEVICE=0        # Uncomment to specify GPU device (0 or 1)

# Scraping Configuration
MAX_CONCURRENT_SCRAPERS=5
SCRAPER_TIMEOUT_MS=30000
SCRAPER_RATE_LIMIT_RPS=1
SCRAPER_USER_AGENT=KnowledgeHubBot/1.0
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_RETRY_DELAY_MS=1000

# Chunking Configuration
MAX_CHUNK_SIZE=500
CHUNK_OVERLAP=50
MIN_CHUNK_SIZE=100

# Security Configuration
SECRET_KEY=change-this-to-a-random-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
API_KEY_HEADER=X-API-Key

# CORS Configuration
CORS_ORIGINS=["http://localhost:3001", "http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=10

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=3002
MCP_HEARTBEAT_INTERVAL=30

# API URL (for internal service communication)
API_URL=http://api:3000

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090